<form action="/user/submit" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>First Name <input type="text" name="user[first_name]" value="<%= @user.first_name %>"></p>
  <p>Last Name <input type="text" name="user[last_name]" value="<%= @user.last_name %>"></p>
  <p>Email <input type="text" name="user[email]" value="<%= @user.email %>"></p>
  <p>Location: <input type="text" name="user[location]" value="<%= @user.location %>">

  <!-- HOW DO I GET PREFILLED STATE FIELDS??? -->
  <select name="user[state]" value = "<%= @user.state %>">
    <option value="WA">WA</option>
    <option value="CA">CA</option>
    <option value="IL">IL</option>
  </select>
  </p>
  <input type="submit" value="Update Records">

</form>
